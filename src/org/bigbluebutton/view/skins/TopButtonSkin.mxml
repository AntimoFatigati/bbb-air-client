<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
		xmlns:s="library://ns.adobe.com/flex/spark">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("spark.components.Button")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="disabled" />
		<s:State name="down" />
		<s:State name="over" />
		<s:State name="up" />
	</s:states>
	<s:Rect top="0" bottom="0" left="0" right="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="{hostComponent.getStyle('gradientColorTop')}" color.down="#454852"/>
				<s:GradientEntry color="{hostComponent.getStyle('gradientColorBottom')}" color.down="#00000"/>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<s:BitmapImage  source="{getStyle('backgroundImage')}" verticalCenter="0" horizontalCenter="0"/>
</s:Skin>
