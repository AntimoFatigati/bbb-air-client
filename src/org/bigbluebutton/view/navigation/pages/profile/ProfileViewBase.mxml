<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:view="org.bigbluebutton.core.view.*"
				xmlns:ui="org.bigbluebutton.view.ui.*"
				styleName="viewStyle"
				>
	<fx:Script>
		<![CDATA[
			import org.bigbluebutton.view.navigation.pages.PagesENUM;
			import org.bigbluebutton.view.navigation.pages.TransitionAnimationENUM;
		]]>
	</fx:Script>
	
	<fx:Declarations>
		<s:RadioButtonGroup id="cameraQualityTypeRadioButtonGroup" />
	</fx:Declarations>
	
	<s:Group  width="100%" height="100%" styleName="pageStyle">
		<s:layout>
			<s:VerticalLayout />
		</s:layout>		
		<s:VGroup width="100%" height="100%" horizontalAlign="center">
			<s:Label width="90%" color="{getStyle('textColor')}" text="{resourceManager.getString('resources', 'profile.participant')}"/>					
			<s:Button id="userName0" width="90%" styleName="userSettingsButtonStyle userNameLableStyle" horizontalCenter="0"/>
			<s:Button id="logoutButton0" width="90%"
					  label="{resourceManager.getString('resources', 'profile.logout')}"
					  styleName="userSettingsButtonStyle logoutButtonStyle"/>					
			<s:Label width="90%" color="{getStyle('textColor')}"  text="{resourceManager.getString('resources', 'profile.settings')}"/>
			<s:Button id="raiseHandButton0"  width="90%" 
					  label="{resourceManager.getString('resources', 'profile.settings.handRaise')}" 
					  styleName="userSettingsButtonStyle userSettingsRaseHandButtonStyle " />
			<ui:NavigationButton id="shareCameraBtn0"  styleName="profileSettingsButtonStyle"
								 navigateTo="{[PagesENUM.CAMERASETTINGS]}"
								 label="{resourceManager.getString('resources', 'cameraSettings.title')}"
								 transitionAnimation="{TransitionAnimationENUM.SLIDE_RIGHT}"
								 width="90%"
								 />
			<ui:NavigationButton id="shareMicBtn0"  styleName="profileSettingsButtonStyle"
								 navigateTo="{[PagesENUM.AUDIOSETTINGS]}"
								 transitionAnimation="{TransitionAnimationENUM.SLIDE_RIGHT}"
								 label="{resourceManager.getString('resources', 'audioSettings.title')}"
								 width="90%"
								 />
		</s:VGroup>
	</s:Group>
</view:NoTabView>
