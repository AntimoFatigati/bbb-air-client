<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:ui="org.bigbluebutton.view.ui.*"
				xmlns:view="org.bigbluebutton.core.view.*" 
				xmlns:common="org.bigbluebutton.view.navigation.pages.common.*"
				>
	
	<fx:Declarations>
		<s:RadioButtonGroup id="cameraQualityTypeRadioButtonGroup" />
	</fx:Declarations>
	
	<s:Group id="mainshell" width="100%" height="100%" styleName="mainshell">
		<s:layout>
			<s:VerticalLayout gap="0" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" />
		</s:layout>
		
		<s:Group width="100%" >
			<s:layout>
				<s:HorizontalLayout gap="5"	paddingBottom="10" paddingLeft="10"	paddingRight="10" paddingTop="10" />
			</s:layout>
			<ui:BackButton />                
			<s:Label width="100%" styleName="pageNameStyle" text="{resourceManager.getString('resources', 'profile.title')}" />
			<ui:SwapCameraButton id="swapCameraBtn" />
			<ui:MicButton id="microphoneBtn" />
		</s:Group>
		
		<s:Scroller width="100%" height="100%"> 
			<s:VGroup width="100%" height="100%" paddingTop="10" paddingLeft="10" paddingRight="10" horizontalAlign="center">
				<s:VGroup width="80%">
					<s:Label width="100%" color="#BEBEBE" text="{resourceManager.getString('resources', 'profile.participant')}"/>
					<s:SkinnableContainer width="100%" skinClass="org.bigbluebutton.view.skins.ProfileViewContainerSkin">
						<s:layout>
							<s:VerticalLayout gap="0" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" />
						</s:layout>
						<s:Label id="userName" width="100%" />
						<s:Line width="100%" height="0">
							<s:stroke>
								<s:SolidColorStroke color="0x000000" weight="2"/>
							</s:stroke>
						</s:Line>				
						<s:Button id="logoutButton0" width="100%" styleName="logoutButtonStyle" />
					</s:SkinnableContainer> 
				</s:VGroup>	
				
				<s:VGroup width="80%">
					<s:Label width="100%" color="#BEBEBE"  text="{resourceManager.getString('resources', 'profile.settings')}"/>
					<s:SkinnableContainer width="100%" skinClass="org.bigbluebutton.view.skins.ProfileViewContainerSkin">
						<s:layout>
							<s:VerticalLayout gap="0" paddingBottom="0" paddingLeft="0" paddingRight="0" paddingTop="0" />
						</s:layout>
						<s:Button id="shareCameraBtn0" width="100%"  alpha="1" buttonMode="true"
								   useHandCursor="true"  styleName="ProfileSettingsButtonStyle" />		
						<s:Line  height="0" width="100%" >
							<s:stroke>
								<s:SolidColorStroke color="0x000000" weight="2"/>
							</s:stroke>
						</s:Line>
						<s:Button id="shareMicBtn0" width="100%"  alpha="1" buttonMode="true"
								  useHandCursor="true"  styleName="ProfileSettingsButtonStyle"/>	
						<s:Line height="0" width="100%">
							<s:stroke>
								<s:SolidColorStroke color="0x000000" weight="2"/>
							</s:stroke>
						</s:Line>
						<s:Button id="raiseHandButton0"  width="100%"  alpha="1" buttonMode="true"
								  useHandCursor="true" styleName="ProfileSettingsButtonStyle" />
						
					</s:SkinnableContainer>
					
					<s:VGroup  id="cameraQualityGroup" width="100%">
						<s:Label width="100%" color="#BEBEBE"
								 text="{resourceManager.getString('resources', 'profile.settings.cameraQuality.selectquality')}" />
						<s:SkinnableContainer width="100%" skinClass="org.bigbluebutton.view.skins.ProfileViewContainerSkin">
							<s:layout>
								<s:VerticalLayout gap="5" paddingBottom="5" paddingLeft="0" paddingRight="0" paddingTop="5" />
							</s:layout>
							<s:RadioButton id="lowQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.low') + ' (160x120)'}"
										   groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="low" styleName="radioButtonStyle" />	
							<s:Line  height="0" width="100%">
								<s:stroke>
									<s:SolidColorStroke color="0x000000" weight="2"/>
								</s:stroke>
							</s:Line>
							<s:RadioButton id="mediumQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.medium') + ' (320x240)'}"
											groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="medium" styleName="radioButtonStyle"/>
							<s:Line  height="0" width="100%">
								<s:stroke>
									<s:SolidColorStroke color="0x000000" weight="2"/>
								</s:stroke>
							</s:Line>
							<s:RadioButton id="highQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.high') + ' (640x480)'}"
											 groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="high" styleName="radioButtonStyle"/>							
						</s:SkinnableContainer>
					</s:VGroup>					
				</s:VGroup>
			</s:VGroup>	
		</s:Scroller>
		
		<common:MenuButtons/>
	</s:Group>
</view:NoTabView>
