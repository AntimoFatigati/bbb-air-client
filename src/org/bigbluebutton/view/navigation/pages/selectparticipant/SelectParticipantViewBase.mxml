<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:ui="org.bigbluebutton.view.ui.*"
				xmlns:view="org.bigbluebutton.core.view.*"
				xmlns:common="org.bigbluebutton.view.navigation.pages.common.*" 
				xmlns:participants="org.bigbluebutton.view.navigation.pages.participants.*" 
				xmlns:selectparticipant="org.bigbluebutton.view.navigation.pages.selectparticipant.*"
				>
	<s:Group id="mainshell" width="100%" height="100%" styleName="mainshell">
		<s:layout>
			<s:VerticalLayout gap="0"
							  paddingBottom="0"
							  paddingLeft="0"
							  paddingRight="0"
							  paddingTop="0"
							  />
		</s:layout>
		
		<s:Group width="100%">
			<s:layout>
				<s:HorizontalLayout gap="5"
									paddingBottom="10"
									paddingLeft="10"
									paddingRight="10"
									paddingTop="10"
									/>
			</s:layout>
			<ui:ProfileButton id="profileBtn" />                
			<s:Label width="100%" styleName="pageNameStyle" text="{resourceManager.getString('resources', 'selectParticipant.title')}"/>
			<ui:SwapCameraButton id="swapCameraBtn" />
			<ui:MicButton id="microphoneBtn" />
		</s:Group>
		<selectparticipant:SelectParticipantList id="participantslist" width="100%" height="100%" />
		<common:MenuButtonsView />
	</s:Group>
</view:NoTabView>
