<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:ui="org.bigbluebutton.view.ui.*"
				xmlns:view="org.bigbluebutton.core.view.*" 
				xmlns:common="org.bigbluebutton.view.navigation.pages.common.*" 
				xmlns:participants="org.bigbluebutton.view.navigation.pages.participants.*"
				>
	<s:Group id="mainshell" width="100%" height="100%" styleName="mainshell">
		<s:layout>
			<s:VerticalLayout/>
		</s:layout>	
		<s:Group width="100%">
			<s:layout>
				<s:HorizontalLayout  />
			</s:layout>
			<ui:ProfileButton id="profileBtn" />                
			<s:Label width="100%" styleName="pageNameStyle" text="{resourceManager.getString('resources', 'participants.title')}"/>
			<ui:SwapCameraButton id="swapCameraBtn" visible="false" styleName="swapCameraButtonStyle topButtonStyle"/>
			<ui:MicButton id="microphoneBtn" styleName="micButtonStyle topButtonStyle" />
		</s:Group>
		<participants:ParticipantsList id="participantslist" width="100%" height="100%" />
		<common:MenuButtonsView />
	</s:Group>
