<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				width="100%"
				>
	
	<fx:Script>
		<![CDATA[
			import org.bigbluebutton.model.User;
			
			override public function set data(obj:Object):void {
				super.data = obj;
				var user:User = data as User;
				if(user)
				{
					title.text = user.name;
				}
				else
				{
					title.text = resourceManager.getString('resources', 'video.noVideo');
				}
			}
			
		]]>
	</fx:Script>
	<s:layout>
		<s:HorizontalLayout />
	</s:layout>
	<s:Group width="100%">
		<s:layout>
			<s:HorizontalLayout />
		</s:layout>
		<s:Label id="title" left="0" right="0" width="50%" height="100%" color="#000000"  textAlign="center" verticalAlign="middle" />
		<s:Image id="cameraIcon"  styleName="iconStyle cameraIconStyle" />
	</s:Group>
	
</s:ItemRenderer>