<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:view="org.bigbluebutton.core.view.*"
				xmlns:ui="org.bigbluebutton.view.ui.*"
				xmlns:assets="assets.*" 
				xmlns:common="org.bigbluebutton.view.navigation.pages.common.*"
				>
	<fx:Script>
		<![CDATA[
			
			import org.bigbluebutton.view.navigation.pages.PagesENUM;
			
		]]>
	</fx:Script>
	
	<s:Group id="mainshell" width="100%" height="100%" styleName="mainshell">
		<s:layout>
			<s:VerticalLayout gap="0"
							  paddingBottom="0"
							  paddingLeft="0"
							  paddingRight="0"
							  paddingTop="0" />
		</s:layout>
		
		<s:Group width="100%" id="topMenuBar0" >
			<s:layout>
				<s:HorizontalLayout gap="5"
									paddingBottom="10"
									paddingTop="10"
									paddingLeft="10"
									paddingRight="10" />
			</s:layout>
			<ui:ProfileButton id="profileBtn" />
			<s:Label width="100%" styleName="pageNameStyle" text="{resourceManager.getString('resources', 'deskshare.title')}" />
			<ui:SwapCameraButton id="swapCameraBtn" />
			<ui:MicButton id="microphoneBtn" />
		</s:Group>

		<s:Group id="deskshareGroup0" width="100%" height="100%" >
			<s:layout>
				<s:VerticalLayout gap="0"
								  paddingBottom="0"
								  paddingLeft="0"
								  paddingRight="0"
								  paddingTop="0"
								  />
			</s:layout>
			<s:Label id="noDeskshareMessage0" width="90%" height="100%" visible="true" text="{resourceManager.getString('resources', 'deskshare.noDeskshare')}" />
		</s:Group>
		<common:MenuButtonsView id="bottomMenuBar0"/>
	</s:Group>
	
</view:NoTabView>
