<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:view="org.bigbluebutton.core.view.*"
				xmlns:ui="org.bigbluebutton.view.ui.*"
				xmlns:assets="assets.*" 
				xmlns:common="org.bigbluebutton.view.navigation.pages.common.*"
				>
	<fx:Script>
		<![CDATA[
			
			import org.bigbluebutton.view.navigation.pages.PagesENUM;
			
		]]>
	</fx:Script>
	
	<s:Group id="mainshell" width="100%" height="100%" styleName="mainshell">
		<s:layout>
			<s:VerticalLayout gap="0"
							  paddingBottom="0"
							  paddingLeft="0"
							  paddingRight="0"
							  paddingTop="0" />
		</s:layout>
		
		<s:Group width="100%" height="50">
			<s:layout>
				<s:HorizontalLayout gap="5"
									paddingBottom="10"
									paddingTop="10"
									paddingLeft="10"
									paddingRight="10" />
			</s:layout>
			
			<ui:ProfileButton id="profileBtn" width="30" height="30" navigateTo="{[PagesENUM.PROFILE]}" />
			
			<s:Group width="100%" height="30">
				<s:Label horizontalCenter="0" verticalCenter="0" text="{resourceManager.getString('resources', 'deskshare.title')}" />
			</s:Group>
			
			<ui:SwapCameraButton id="swapCameraBtn" width="30" height="30" />
			<ui:MicButton id="microphoneBtn" width="30" height="30" />	
			
		</s:Group> 
	
		<s:Group id="deskshareGroup0" width="100%" height="100%" >
			<s:layout>
				<s:VerticalLayout gap="0"
								  paddingBottom="0"
								  paddingLeft="0"
								  paddingRight="0"
								  paddingTop="0"
								  />			
			</s:layout>
			<s:Label id="noDeskshareMessage0" width="100%" height="100"
			fontSize="20" horizontalCenter="0"
			visible="true" text="{resourceManager.getString('resources', 'deskshare.noDeskshare')}"
			textAlign="center" verticalCenter="0"/>
		</s:Group>

		<common:MenuButtonsView width="100%" height="42" />
	</s:Group>
	
</view:NoTabView>
