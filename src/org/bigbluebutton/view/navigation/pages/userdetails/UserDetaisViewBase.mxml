<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:view="org.bigbluebutton.core.view.*" 
				xmlns:userdetails="org.bigbluebutton.view.navigation.pages.userdetails.*"
				styleName="userDetailviewStyle"
				>
	<s:Group  width="100%" height="100%">
		<s:layout>
			<s:VerticalLayout horizontalAlign="center"/>
		</s:layout>
		<s:Group width="100%" >
			<s:layout>
				<s:HorizontalLayout />
			</s:layout>
			<s:Label width="50%" styleName="userDetailsLabelStyle contentFontSize"
					 text="{resourceManager.getString('resources', 'userDetail.name')}" />
			<s:Label id="userNameText" width="50%" styleName="userDetailsLabelStyle contentFontSize" />
		</s:Group>
		<s:Line width="90%">
			<s:stroke>
				<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('lineWeight')}" />
			</s:stroke>
		</s:Line>
		<s:Group width="100%">
			<s:layout>
				<s:HorizontalLayout />
			</s:layout>
			<s:Label width="50%" styleName="userDetailsLabelStyle contentFontSize" 
					 text="{resourceManager.getString('resources', 'userDetail.role')}"/>
			<s:Label id="statusText" width="50%" styleName="userDetailsLabelStyle contentFontSize"/>
		</s:Group>
		<s:Line width="90%">
			<s:stroke>
				<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('lineWeight')}" />
			</s:stroke>
		</s:Line>
		<s:Group width="100%">
			<s:layout>			
				<s:HorizontalLayout verticalAlign="middle"/>
			</s:layout>
			<s:Label width="50%" styleName="userDetailsLabelStyle contentFontSize" 
					 text="{resourceManager.getString('resources', 'userDetail.media')}" />
			<s:Group  width="50%">
				<s:layout>
					<s:HorizontalLayout horizontalAlign="center"/>
				</s:layout>
				<s:Image id="cameraIcon" styleName="iconStyle cameraIconStyle"/>
				<s:Group>
					<s:Image id="micIcon"    styleName="iconStyle micIconStyle"/>
					<s:Image id="micOffIcon" styleName="iconStyle micOffIconStyle" visible="false"/>
				<s:Label width="50%" styleName="userDetailsLabelStyle" color="{getStyle('color')}" 
						 height="100%" text="{resourceManager.getString('resources', 'userDetail.media')}" />
				<s:Group  width="50%" height="100%">
					<s:layout>				
						<s:HorizontalLayout  horizontalAlign="center"/>
					</s:layout>
					<s:Image id="cameraIcon" styleName="iconStyle cameraIconStyle" height="100%" />
					<s:Group height="100%">	
						<s:Image id="micIcon"    styleName="iconStyle micIconStyle" height="100%" />
						<s:Image id="micOffIcon" styleName="iconStyle micOffIconStyle" visible="false"  height="100%" />
						<s:Image id="listenOnlyIcon" styleName="iconStyle listenOnlyIconStyle" visible="false" height="100%" />
					</s:Group>
					<s:Image id="soundIcon"  styleName="iconStyle soundIconStyle" height="100%" />
				</s:Group>
				<s:Image id="soundIcon"  styleName="iconStyle soundIconStyle"/>
			</s:Group>
		</s:Group>
		<s:Line width="90%">
			<s:stroke>
				<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('lineWeight')}" />
			</s:stroke>
		</s:Line>
		<s:Group>
			<s:layout>
				<s:VerticalLayout  horizontalAlign="center" paddingTop="{getStyle('showCameraButtonPaddingTop')}"/>
			</s:layout>
			<s:Button id="showCameraButton0" label="{resourceManager.getString('resources', 'userDetail.cameraBtn.text')}" styleName="commonButtonStyle"/>
			<s:Button id="showPrivateChat0"  label="{resourceManager.getString('resources', 'userDetail.privateChatBtn.text')}" styleName="commonButtonStyle"/>
		</s:Group>
	</s:Group>
</view:NoTabView>
