<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:ui="org.bigbluebutton.view.ui.*"
				xmlns:view="org.bigbluebutton.core.view.*" xmlns:assets="assets.*" xmlns:common="org.bigbluebutton.view.navigation.pages.common.*" xmlns:chat="org.bigbluebutton.view.navigation.pages.chat.*"
				>
	<fx:Script>
		<![CDATA[
			import org.bigbluebutton.view.navigation.pages.ActionsENUM;
			import org.bigbluebutton.view.navigation.pages.PagesENUM;
			
			import spark.components.List;
			
			public function get list():List
			{
				return chatlist;
			}
			
			public function get inputMessage():TextInput
			{
				return inputMessage0;
			}
			
			public function get sendButton():Button
			{
				return sendButton0;
			}
		]]>
	</fx:Script>
	<view:states>
		<s:State name="chat" />
		<s:State name="chatroom" />
	</view:states>
	<s:Group id="mainshell" width="100%" height="100%" styleName="mainshell">
		<s:layout>
			<s:VerticalLayout gap="0"
							  paddingBottom="0"
							  paddingLeft="0"
							  paddingRight="0"
							  paddingTop="0"
							  />
		</s:layout>
		
		<s:Group width="100%" height="50">
			<s:layout>
				<s:HorizontalLayout gap="5"
									paddingBottom="10"
									paddingLeft="10"
									paddingRight="10"
									paddingTop="10"
									/>
			</s:layout>
			<ui:ProfileButton id="profileBtn" width="30" height="30" navigateTo="profile"/>                
			<s:Group width="100%" height="30">
				<s:Label horizontalCenter="0" text="Group Chat" verticalCenter="0"/>
			</s:Group>	
			<ui:MicButton id="microfoneBtn" width="30" height="30"/>
		</s:Group>
		<chat:ChatList id="chatlist" includeIn="chat" width="100%" height="100%">
			<!--
			<assets:ChatScreenSp width="100%" height="100%" visible="true" visible.chatroom="false"
			click="{ChatViewBase(document).currentState = 'chatroom'}"/>
			<assets:ChatroomScreenSp width="100%" height="100%" visible="false" visible.chatroom="true"
			click="{ChatViewBase(document).currentState = 'chat'}"/>
			-->
		</chat:ChatList>
		<s:Group includeIn="chat" width="100%" height="50">
			<s:layout>
				<s:HorizontalLayout gap="5"
									paddingBottom="10"
									paddingLeft="10"
									paddingRight="10"
									paddingTop="10"
									/>
			</s:layout>
			<s:TextInput id="inputMessage0" y="5" width="100%" height="30"/>
			<s:Button id="sendButton0" height="30" label="Enviar" enabled="{inputMessage0.text!=''}"/>
		</s:Group>
		<common:MenuButtons width="100%" height="42"/>
	</s:Group>
</view:NoTabView>
