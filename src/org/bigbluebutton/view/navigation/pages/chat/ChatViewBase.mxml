<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:ui="org.bigbluebutton.view.ui.*"
				xmlns:view="org.bigbluebutton.core.view.*" 
				xmlns:common="org.bigbluebutton.view.navigation.pages.common.*" 
				xmlns:chat="org.bigbluebutton.view.navigation.pages.chat.*"
				>
	<s:Group id="mainshell" width="100%" height="100%" styleName="mainshell">
		<s:layout>
			<s:VerticalLayout gap="0"
							  paddingBottom="0"
							  paddingLeft="0"
							  paddingRight="0"
							  paddingTop="0"
							  />
		</s:layout>
		
		<s:Group width="100%" >
			<s:layout>
				<s:HorizontalLayout gap="5"
									paddingBottom="10"
									paddingLeft="10"
									paddingRight="10"
									paddingTop="10"
									/>
			</s:layout>
			<ui:ProfileButton id="profileBtn" />                
			<s:Label id="pageTitle0" width="100%" styleName="pageNameStyle" text="{resourceManager.getString('resources', 'chat.public.title')}" />
			<ui:SwapCameraButton id="swapCameraBtn" />
			<ui:MicButton id="microphoneBtn" />
		</s:Group>
		<s:Scroller width="100%" height="100%"> 
			<s:VGroup height="100%" width="100%" paddingTop="10" paddingLeft="5" paddingRight="10">
				<chat:ChatList id="chatlist" width="100%" height="100%" contentBackgroundColor="white"/>
			</s:VGroup>
		</s:Scroller>
		<s:Group width="100%" height="8%">
			<s:layout>
				<s:HorizontalLayout gap="5"
									paddingBottom="10"
									paddingLeft="10"
									paddingRight="10"
									paddingTop="10"
									/>
			</s:layout>
			<s:TextInput id="inputMessage0" width="80%" height="100%"/>
			<s:Button id="sendButton0" width="20%" height="100%" label="{resourceManager.getString('resources', 'chat.sendBtn.text')}" enabled="{inputMessage0.text!=''}"/>
		</s:Group>		
		<common:MenuButtonsView width="100%" />
	</s:Group>
</view:NoTabView>
