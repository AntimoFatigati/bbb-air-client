		<s:Group width="100%" height="100%">
			<assets:ProfileScreenSp width="100%" height="100%"/>
			<ui:NavigationButton left="32" right="26" top="99" alpha="0"
								 navigateTo="{PagesENUM.LOGIN}"/>
